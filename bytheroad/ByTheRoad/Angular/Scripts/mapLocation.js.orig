function executePan() {
    newLat = newLat - .025;
    newLng = newLng - .025;
    var newLatLng = new google.maps.LatLng(newLat, newLng);
    map.panTo(newLatLng);
    locHist.push({ lat: newLat, lng: newLng, time: Date.now() });
    getCurrDirection();
}

